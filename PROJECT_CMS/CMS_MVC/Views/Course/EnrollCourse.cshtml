@{
}

<style>
    .body{
        background: Red;
    }

    .containerCourse {
        display: flex;
       
    }

    .course {
        width: 200px;
        height: 350px;
        background: #FFFFFF;
        justify-content: center;
        word-wrap: break-word;
        margin: 20px;
    }

    .imgCourse img {
        width: 200px;
        height: 100px;
    }

</style>
<form method="get" asp-controller="Course" asp-action="Enroll">
    <div class="containerCourse">
        @foreach (var item in ViewBag.ListCourse)
        {
            <input type="hidden" name="courseId" value="@item.CourseId" />
            <div class="course">
                <div class="imgCourse">
                    <img src="~/image/anhtruutuong.jpg" />
                </div>
                <div style="text-align:center">
                    <p> <a href="/enrollcourse?courseid=@item.CourseId">@item.CourseTitle - @item.Semester </a></p>
                    <p><img style="width:20px; height:20px" src="~/image/enroll.png" /></p>
                </div>
                <div>
                    <ul>
                        <li>Course Creator: @item.CreatorName</li>
                        <li>
                            @foreach (var t in item.Teachers)
                            {
                                <p>@t</p>
                            }
                        </li>
                    </ul>
                </div>
                <p>Category:<a>@item.CategoryTitle</a></p>
                <div>
                </div>
            </div>
        }
    </div>
    }

    <button type="submit"> ENROLL </button>
</form>
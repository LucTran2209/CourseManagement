<h2>Create New Course</h2>
<form method="post" asp-action="Create" asp-controller="Course">
    <!--Get account iD by claims-->


    <input type="hidden" class="form-control" name="userId" id="accountId" value="@Context.Session.GetInt32("UserId")" >
    <div class="row">
        <div class="col">
            <div class="mb-1">
                <label for="title" class="form-label">Title</label>
                <input style="border: 1px solid #dee2e6;" type="text" class="form-control" name="courseTitle" id="title" placeholder="Title">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="mb-1">  
                <label for="description" class="form-label">Semester</label>
                <input style="border: 1px solid #dee2e6;" class="form-control" name="semester" id="description">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="mb-1">
                <label for="address" class="form-label">TimeStart</label>
                <input style="border: 1px solid #dee2e6;" type="datetime" class="form-control" name="timeStart" id="address">
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col">
            <div class="mb-1">
                <label for="address" class="form-label">TimeEnd</label>
                <input style="border: 1px solid #dee2e6;" type="datetime" class="form-control" name="timeEnd" id="address">
            </div>
        </div>
    </div>

    <select name="categoryId">
        @foreach (var item in ViewBag.Categories)
        {
            <option value="@item.CategoryId">@item.CategoryName</option>
        }
    </select>
    
    <p style="color: green">@Context.Session.GetString("ResultCreate")</p>

    <button type="submit">Create</button>

</form>
